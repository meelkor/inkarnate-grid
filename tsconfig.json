{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./",
    "baseUrl": "./",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false,
  },
  "include": ["./src/index.ts"],
  "exclude": [],
}
